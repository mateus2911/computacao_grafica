{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Meteor_Runner",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/Meteor_Runner",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "preLaunchTask": "CMake Build",
            "MIMode": "gdb",
            "miDebuggerPath": "/usr/bin/gdb",
            "setupCommands": [
                { "description": "Enable pretty-printing", "text": "-enable-pretty-printing", "ignoreFailures": true }
            ]
        }
    ]
}